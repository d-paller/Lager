@using System
@{

}
@model Lager.Models.ViewModels.ItemViewModel
<td colspan="6">
    <div class="row text-info">

        <div class="col-xs-1">
            Part ID
        </div>

        <div class="col-xs-1">
            Date Added
        </div>

        <div class="col-xs-1">
            Cost
        </div>

        <div class="col-xs-1">
            Date Purchased
        </div>

        <div class="col-xs-2 text-center">
            Holder
        </div>

        <div class="col-xs-1">
            Vendor ID
        </div>

        <div class="col-xs-3">
            Description
        </div>

        <div class="col-xs-2">
            Purchase Url
        </div>

    </div>
    <hr />
    <div class="row">
        <div class="col-xs-1">
            @Model.Part.PartId
        </div>

        <div class="col-xs-1">
            @Model.Part.DateAdded.ToString("MM/dd/yyyy")
        </div>

        <div class="col-xs-1">
            @Model.Part.Cost
        </div>

        <div class="col-xs-1">
            @Model.Part.DatePurchased.ToString("MM/dd/yyyy")
        </div>

        <div class="col-xs-2 text-center">
            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#manage-part">Current Holder: <strong>@Model.Part.Holder</strong></button>
        </div>

        <div class="col-xs-1">
            @Model.Part.VendorID
        </div>

        <div class="col-xs-3">
            @Model.Part.Description
        </div>

        <div class="col-xs-2">
            @Model.Part.PurchaseUrl
        </div>
    </div>
</td>


@* MODEL FOR CHECKING PARTS OUT *@
<div id="manage-part" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title">Manage Part</h2>
                <h4>Currently checked out by: <strong>@Model.Part.Holder</strong></h4>
            </div>
            <div class="modal-body">
                @Html.Partial("_ManageHolder", Model.StudentSelectList)
            </div>
            <div class="modal-footer" style="border-top:none">
                <button type="submit" class="btn btn-default" data-dismiss="modal">Save</button>
            </div>
        </div>

    </div>
</div>