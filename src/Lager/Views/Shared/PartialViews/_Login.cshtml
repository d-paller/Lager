@model Lager.Models.User


<div class="panel panel-primary">
    <div class="panel-heading">
        <h3>Login</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "Login failed, check the login details.")

            <div class="form-group">
                @Html.LabelFor(x => x.Username)
                @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @type = "text", @placeholder = "User Name" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(x => x.Password, null, new { @class = "form-control", @type = "password", @placeholder = "Enter Password" })
            </div>

            <button type="submit" class="btn btn-success">Submit</button>
        }
    </div>
</div>
